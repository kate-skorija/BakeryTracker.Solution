@using BakeryTracker.Models;
@{
  Layout = "_Layout";
}

<h2>@Model["vendor"].Name's Orders:</h2>

<div class="orders">
  @if (@Model["orders"].Count == 0)
  {
    <h3>No orders have been added yet.</h3>
  }
  <ol>
    @foreach (Order order in @Model["orders"])
    {
      <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></li>
    }
  </ol>
</div>

<footer>
  <p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a New Order For This Vendor</a></p>
  <p><a href='/vendors'>Return to Vendor List</a></p>
  <p><a href='/'>Return to Home Page</a></p>
</footer>